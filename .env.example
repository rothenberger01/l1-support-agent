# LLM Configuration
LLM_PROVIDER=openai  # or gemini, claude
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# Or Gemini
# GEMINI_API_KEY=...
# GEMINI_MODEL=gemini-1.5-pro

# Or Claude
# ANTHROPIC_API_KEY=...
# ANTHROPIC_MODEL=claude-3-5-sonnet

# Application
APP_ENV=development  # or production
LOG_LEVEL=INFO
DEBUG=true

# Database (optional, for state storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/support_agent
DATABASE_URL=sqlite:///./agent.db

# Redis (optional, for caching context)
REDIS_URL=redis://localhost:6379/0

# KB Configuration
KB_SOURCE=json  # or api, postgres
KB_PATH=./data/kb.json

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Tracing
TRACE_STORAGE=file  # or postgres, s3
TRACE_DIR=./traces

# Confidence thresholds
CONFIDENCE_ESCALATE_THRESHOLD=0.7
CONFIDENCE_REJECT_THRESHOLD=0.5
